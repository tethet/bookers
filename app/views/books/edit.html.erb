<%= flash[:notice] %>

<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved:
  

   <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 <% end %> 

<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 
 <p>Body</p>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
 
 
<% end %>

 <span><%= link_to "Show", book_path(@book) %>
 </span>

<span><%= link_to "Back", books_path %>
 </span>


